{
	"private": true,
	"scripts": {
		"assets": "turbo --filter=@sd/assets",
		"build": "turbo run build",
		"clean": "rimraf node_modules/ **/node_modules/ target/ **/.build/ **/.next/ **/dist/**",
		"client": "turbo --filter=@sd/client",
		"codegen": "turbo run --filter=@sd/core test",
		"core": " turbo --filter=@sd/server",
		"desktop": "turbo --filter=@sd/desktop",
		"docs": "pnpm --filter @sd/docs -- ",
		"format": "prettier --write .",
		"gen:migrations": "turbo run --filter=@sd/core prisma:migrate:dev",
		"interface": "pnpm --filter @sd/interface -- ",
		"landing": "turbo --filter @sd/landing",
		"landing-web": "turbo run dev --filter=@sd/landing --filter=@sd/web",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint -- --fix",
		"mobile": "turbo --filter=@sd/mobile",
		"prep": "pnpm codegen",
		"prisma": "turbo run --filter=@sd/core prisma --",
		"turbo": "turbo",
		"typecheck": "turbo run typecheck",
		"ui": "turbo --filter=@sd/ui",
		"web": "turbo --filter=@sd/web"
	},
	"pnpm": {
		"overrides": {
			"@radix-ui/react-dismissable-layer": "1.0.2"
		}
	},
	"devDependencies": {
		"@babel/plugin-syntax-import-assertions": "^7.20.0",
		"@cspell/dict-rust": "^2.0.1",
		"@cspell/dict-typescript": "^2.0.2",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"cspell": "^6.12.0",
		"markdown-link-check": "^3.10.3",
		"prettier": "^2.8.7",
		"prettier-plugin-tailwindcss": "^0.2.6",
		"rimraf": "^4.1.1",
		"turbo": "^1.8.8",
		"turbo-ignore": "^0.3.0",
		"typescript": "^4.9.4"
	},
	"overrides": {
		"vite-plugin-svgr": "https://github.com/spacedriveapp/vite-plugin-svgr#cb4195b69849429cdb18d1f12381676bf9196a84",
		"@types/node": "^18.0.0"
	},
	"engines": {
